{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
